<IfModule mod_rewrite.c>
    RewriteEngine On

    # Serve frontend static files
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ ../frontend/build/$1 [L]

    # Serve the index.html for any frontend route if it doesn't match an actual file
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ ../frontend/build/index.html [L]

    # If the request doesn't match a file, route to graphql.php for GraphQL handling
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ graphql.php [QSA,L]
</IfModule>
